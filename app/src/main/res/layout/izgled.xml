<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000000">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="4"
        android:rowCount="6">

        <TextView
            android:id="@+id/rezultat"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:gravity="right|bottom"
            android:background="#000000"
            android:textColor="#FFFFFF"
            android:layout_columnSpan="4"
            android:textSize="50sp">

        </TextView>

        <Button
            android:id="@+id/ac"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:background="#808080"
            android:text="AC"
            android:textColor="#000000"
            android:layout_margin="1sp"
            android:textSize="30sp" />

        <Button
            android:id="@+id/brisi"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="1sp"
            android:background="#808080"
            android:textColor="#000000"
            android:text="←"
            android:textSize="30sp" />
        <Button
            android:id="@+id/posto"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="1sp"
            android:background="#808080"
            android:textColor="#000000"
            android:text="%"
            android:textSize="30sp" />
        <Button
            android:id="@+id/podijeli"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="1sp"
            android:background="#ff8c00"
            android:textColor="#FFFFFF"
            android:text="÷"
            android:textSize="30sp" />

        <Button
            android:id="@+id/sedam"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="1sp"
            android:background="#D3D3D3"
            android:textColor="#000000"
            android:text="7"
            android:textSize="30sp" />

        <Button
            android:id="@+id/osam"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="1sp"
            android:background="#D3D3D3"
            android:textColor="#000000"
            android:text="8"
            android:textSize="30sp" />

        <Button
            android:id="@+id/devet"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="1sp"
            android:background="#D3D3D3"
            android:textColor="#000000"
            android:text="9"
            android:textSize="30sp" />

        <Button
            android:id="@+id/pomnozi"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="1sp"
            android:background="#ff8c00"
            android:textColor="#FFFFFF"
            android:text="x"
            android:textSize="30sp" />

        <Button
            android:id="@+id/cetiri"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="1sp"
            android:background="#D3D3D3"
            android:textColor="#000000"
            android:text="4"
            android:textSize="30sp" />

        <Button
            android:id="@+id/pet"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="1sp"
            android:background="#D3D3D3"
            android:textColor="#000000"
            android:text="5"
            android:textSize="30sp" />

        <Button
            android:id="@+id/sest"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="1sp"
            android:background="#D3D3D3"
            android:textColor="#000000"
            android:text="6"
            android:textSize="30sp" />

        <Button
            android:id="@+id/oduzmi"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="1sp"
            android:background="#ff8c00"
            android:textColor="#FFFFFF"
            android:text="-"
            android:textSize="30sp" />

        <Button
            android:id="@+id/jedan"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="1sp"
            android:background="#D3D3D3"
            android:textColor="#000000"
            android:text="1"
            android:textSize="30sp" />

        <Button
            android:id="@+id/dva"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="1sp"
            android:background="#D3D3D3"
            android:textColor="#000000"
            android:text="2"
            android:textSize="30sp" />

        <Button
            android:id="@+id/tri"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="1sp"
            android:background="#D3D3D3"
            android:textColor="#000000"
            android:text="3"
            android:textSize="30sp" />

        <Button
            android:id="@+id/zbroji"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="1sp"
            android:background="#ff8c00"
            android:textColor="#FFFFFF"
            android:text="+"
            android:textSize="30sp" />

        <Button
            android:id="@+id/nula"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="1sp"
            android:background="#D3D3D3"
            android:textColor="#000000"
            android:text="0"
            android:layout_columnSpan="2"
            android:textSize="30sp" />

        <Button
            android:id="@+id/tocka"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="1sp"
            android:background="#D3D3D3"
            android:textColor="#000000"
            android:text="."
            android:textSize="30sp" />

        <Button
            android:id="@+id/jednako"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="1sp"
            android:background="#ff8c00"
            android:textColor="#FFFFFF"
            android:text="="
            android:textSize="30sp" />

    </GridLayout>
</LinearLayout>